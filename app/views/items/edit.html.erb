<h2>Edit Item Information</h2>
<%= form_for [@business, @item], url: { action: "update" } do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name, placeholder: :name %><br /><br />
  <%= f.label :description %><br />
  <%= f.text_area :description, placeholder: :description, size: "40x4" %><br /><br />
  <%= f.submit %>
<% end %>
