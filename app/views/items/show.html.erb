<div class="row">
  <div class="col-md-4" id="item_image">
    <img src="<%= @item.image %>" alt="<%= @item.name %>" class="img-thumbnail"/>
  </div>

  <div class="col-md-8" id="item_details">
    <h2><%= @item.name %></h2>
    <p><%= @item.description %></p>
    <h5>Starting Price: <%= number_to_currency(@item.price) %></h5>

    <%= render partial: "countdown", locals: {item: @item}%>

    <% if @item.open?  %>
      <% if @item.high_bid == 0.00 %>
      <p>
        No current bids
      </p>
      <% else %>
        Highest Bid: <%= number_to_currency(@item.high_bid) %><br>
        Highest Bidder: <%= format_bidder(@item.high_bidder) %><br>
        Predicted Selling Price: <%= predict_price(@item) %>
      <% end %>
      <%= render partial: "new_bid", locals: {item: @item}%>
    <% else %>
      <p>
      This item's auction has ended!
      </p>
    <% end  %>
    <div> <%= link_to "Browse more items from #{@item.business.name}", business_path(slug: @item.business.slug) %> </div>
  </div>
</div>

<script type="text/javascript">
  var item_end_date = <%= @item.end_time.to_f * 1000 %>
  var deadline = new Date(item_end_date);
  initializeClock('clockdiv', deadline)
</script>
