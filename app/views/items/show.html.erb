<div class="row">
  <div class="col-md-4" id="item_image">
    <img src="<%= @item.image %>" alt="<%= @item.name %>" class="img-thumbnail"/>
  </div>

  <div class="col-md-8" id="item_details">
    <h2><%= @item.name %></h2>
    <p><%= @item.description %></p>
    <h5>$<%= @item.price %></h5>

    <% if @item.active? %>
    <%= button_to "Add to cart", cart_items_path(id: @item), class: "btn" %>
    <% else %>
    <p>
      Item Retired
    </p>
    <% end  %>
    <% if @item.high_bid == nil %>
    <p>
      No current bids
    </p>
    <% else %>
      Highest Bid: <%= @item.high_bid %>
      Highest Bidder: <%= @item.high_bidder.name %>
    <% end %>
    <%= render partial: "new_bid", locals: {item: @item}%>

  </div>
</div>
